<%= form_for questionnaire, html: {class: "form-horizontal"} do |f| %>
  <div class="box-body">
    <div class="errors">
      <% questionnaire.errors.full_messages.each do |error| %>
        <%= error.inspect %>
      <% end %>
    </div>

    <legend>Detalle</legend>
    <div class="form-group">
      <%= f.label :name, "Nombre", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Nombre del Cuestionario" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :close_at, "Fecha de Cierre", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_field :close_at, class: "form-control" %>
      </div>
    </div>

    <legend>Lista de Preguntas</legend>
    <div id="questions">
      <%= f.fields_for :questions do |question| %>
        <%= render 'question_fields', f: question %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Agregar Pregunta', f, :questions, class: "btn btn-default pull-right" %>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <%= f.submit class: "btn btn-info pull-right" %>
    <%= link_to "Volver", :back, class: "btn btn-default" %>
  </div>
<% end %>
